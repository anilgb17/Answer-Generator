# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file to create your own .env file:
#    cp backend/.env.example backend/.env
#
# 2. Add your API keys below (at least one AI provider required)
#
# 3. Generate security keys by running:
#    python -c "import secrets; print('SECRET_KEY=' + secrets.token_hex(32)); print('ENCRYPTION_KEY=' + secrets.token_urlsafe(32))"
#
# 4. Never commit your .env file to git (it's already in .gitignore)
# ============================================

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# ============================================
# File Storage
# ============================================
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
MAX_FILE_SIZE_MB=50

# ============================================
# AI Provider API Keys (at least one required)
# ============================================
# Get Gemini API key (FREE - Recommended): https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Get Perplexity API key (FREE tier available): https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# Get OpenAI API key (PAID): https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Get Anthropic API key (PAID): https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Vector Database Configuration
# ============================================
VECTOR_DB_PATH=./data/chromadb

# ============================================
# PDF Configuration
# ============================================
PDF_RETENTION_DAYS=7

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================
# Security Configuration
# ============================================
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# Generate ENCRYPTION_KEY with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=

ENFORCE_HTTPS=False  # Set to True in production
RATE_LIMIT_ENABLED=True
CSP_ENABLED=True
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# ============================================
# Database Configuration
# ============================================
DATA_DIR=./data
