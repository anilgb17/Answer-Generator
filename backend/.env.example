# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# File Storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
MAX_FILE_SIZE_MB=50

# LLM API Keys (at least one required)
# Get Gemini API key (FREE): https://makersuite.google.com/app/apikey
# Get Perplexity API key (FREE tier available): https://www.perplexity.ai/settings/api
# Get OpenAI API key (PAID): https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Vector Database Configuration
VECTOR_DB_PATH=./data/chromadb

# PDF Configuration
PDF_RETENTION_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security Configuration
ENFORCE_HTTPS=False  # Set to True in production
SECRET_KEY=your_secret_key_here_generate_with_secrets_token_hex
RATE_LIMIT_ENABLED=True
CSP_ENABLED=True
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
