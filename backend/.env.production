# Production Environment Configuration
# Copy this file to .env.prod and fill in actual values

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# ============================================
# Security Configuration
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY

# Force HTTPS in production
ENFORCE_HTTPS=True

# Enable security features
RATE_LIMIT_ENABLED=True
CSP_ENABLED=True
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# ============================================
# API Keys
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=REPLACE_WITH_YOUR_OPENAI_API_KEY

# Optional: Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=REPLACE_WITH_YOUR_ANTHROPIC_API_KEY

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# Generate strong password: python -c "import secrets; print(secrets.token_urlsafe(32))"
REDIS_PASSWORD=REPLACE_WITH_STRONG_REDIS_PASSWORD

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://:REPLACE_WITH_REDIS_PASSWORD@redis:6379/0
CELERY_RESULT_BACKEND=redis://:REPLACE_WITH_REDIS_PASSWORD@redis:6379/0

# ============================================
# File Storage Configuration
# ============================================
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs
MAX_FILE_SIZE_MB=50

# ============================================
# Vector Database Configuration
# ============================================
VECTOR_DB_PATH=/app/data/chromadb

# ============================================
# PDF Configuration
# ============================================
PDF_RETENTION_DAYS=7

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=WARNING
LOG_FILE=/app/logs/app.log

# ============================================
# Cloud Storage (Optional)
# ============================================
# Uncomment and configure if using cloud storage

# AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# Google Cloud Storage
# GCS_BUCKET_NAME=your-bucket-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================
# Monitoring (Optional)
# ============================================
# Uncomment if using monitoring services

# Sentry
# SENTRY_DSN=your_sentry_dsn

# New Relic
# NEW_RELIC_LICENSE_KEY=your_license_key
# NEW_RELIC_APP_NAME=question-answer-generator

# ============================================
# Notes
# ============================================
# 1. Never commit this file with actual secrets to version control
# 2. Use environment-specific files (.env.prod, .env.staging)
# 3. Rotate secrets regularly
# 4. Use secret management systems in production (Vault, AWS Secrets Manager)
# 5. Ensure ENFORCE_HTTPS=True in production
# 6. Set appropriate LOG_LEVEL (WARNING or ERROR in production)
